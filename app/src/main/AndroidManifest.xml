<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.lerno">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.lerno.CheatActivity"
            android:label="Cheat"
            android:parentActivityName="com.example.android.lerno.QuizMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.lerno.QuizMainActivity" />
        </activity>
        <activity android:name="com.example.android.lerno.QuizMainActivity"
            android:label="Quiz"
            android:parentActivityName="com.example.android.lerno.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.lerno.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.lerno.SplashActivity"
            android:theme="@style/AppThemeNoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.lerno.DetailActivity" />
        <activity android:name="com.example.android.lerno.MainActivity" />
    </application>

</manifest>